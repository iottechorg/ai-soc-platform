KAFKA_BROKER=kafka:29092
ZOOKEEPER_CONNECT=zookeeper:2181

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=secure_password
CLICKHOUSE_DATABASE=soc_platform

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Slack Configuration (replace with your webhook)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAILS=security-team@yourcompany.com

# Grafana Configuration
GRAFANA_PASSWORD=admin123

# Model Configuration
ML_ISOLATION_FOREST_ENABLED=true
ML_CLUSTERING_ENABLED=true
ML_TIMESERIES_ENABLED=true
ML_FORBIDDEN_RATIO_ENABLED=true

# Alert Thresholds
ALERT_THRESHOLD_HIGH=0.8
ALERT_THRESHOLD_MEDIUM=0.6
ALERT_THRESHOLD_LOW=0.4

# RL Configuration
RL_LEARNING_RATE=0.001
RL_EXPLORATION_RATE=0.1
RL_DISCOUNT_FACTOR=0.99